<Window x:Name="app1" x:Class="FaceRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognition"
        xmlns:vm="clr-namespace:FaceRecognition.ViewModel"
        xmlns:conv="clr-namespace:FaceRecognition.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900" Loaded="Window_Loaded">
    <Window.DataContext>
        <vm:FaceRecognizerVM  />
    </Window.DataContext>
    <Window.Resources>
        <conv:ToBitmapSourceConverter x:Key="ToBitmapSourceConverter"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Image x:Name="MainWindowCamera" Source="{Binding MainCamera, Converter={StaticResource ToBitmapSourceConverter}, Mode=OneWay}" HorizontalAlignment="Left" Height="421" Margin="10,10,0,0" VerticalAlignment="Top" Width="658"/>
            <StackPanel HorizontalAlignment="Left" Height="421" Margin="691,10,0,0" VerticalAlignment="Top" Width="191"/>

        </Grid>
    </DockPanel>
</Window>
